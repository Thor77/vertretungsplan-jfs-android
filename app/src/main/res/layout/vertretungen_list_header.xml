<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="56dp">

    <TextView
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Std."
        android:id="@+id/text_view_period"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Klasse"
        android:id="@+id/text_view_class"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/text_view_period"
        android:layout_toEndOf="@id/text_view_period"
        android:paddingTop="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fach"
        android:id="@+id/text_view_subject"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/text_view_class"
        android:layout_toEndOf="@id/text_view_class"
        android:paddingTop="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kommentar"
        android:id="@+id/text_view_comment"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:paddingTop="8dp"
        android:layout_toRightOf="@id/text_view_subject"/>

</RelativeLayout>